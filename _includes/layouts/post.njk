
{% extends "layouts/default.njk" %}
{% set pageHeaderTitle = title %}
{% block content %}
<div class="w-full object-cover overflow-hidden plane-img">{% cloudinaryImage image, "", "Cloudinary Sample Image" %}</div>
<div><img src="/images/{{country}}.svg" class="w-64 h-64 mx-auto -mt-32 border-4 border-white rounded-full shadow-md relative"/></div>
<div class="container px-3 max-w-5xl">
<h1 class="text-center">{{ title | safe }}</h1>
<div class="text-center text-gray-600 tracking-wide text-lg uppercase my-2 font-bold">{{planetype}}</div>
<div class="text-center text-gray-600 tracking-wide text-sm uppercase mt-2 leading-10">Max-speed (MPH)<br><span class="text-6xl text-gray-700 font-bold leading-10">{{maxspeed}}</span></div>
<hr class="mt-2 mb-4"/>
  <article>
    <div class="[ page-content ] [ flow wrapper ] [ flow-space-700 gap-top-700 ]">
      {{ content | safe }}
    </div> 
  </article>
  </div>
{% endblock %} 
